<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/anna"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/anna_frozen" />

    <TextView
        android:id="@+id/Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name-Anna of Arendelle"
        android:textSize="18sp"
        android:layout_toRightOf="@id/anna"
        android:layout_marginTop="20dp"
        android:textColor="#3d85c6"
        android:textStyle="bold"

        />

    <TextView
        android:id="@+id/MovieName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Name"
        android:layout_toRightOf="@id/anna"
        android:layout_marginTop="15dp"
        android:text="Movie-Frozen"
        android:textSize="18sp"
        android:textColor="#3d85c6"
        android:textStyle="italic"

        />

    <TextView
        android:id="@+id/qualities"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/MovieName"
        android:layout_toRightOf="@id/anna"
        android:text="Qualities-Goofy,optimistic,loyal, and a hopeless romantic"
        android:textColor="#3d85c6"
        android:textSize="18sp"
        android:textStyle="italic"
        android:layout_marginTop="15dp"/>

    <Button
        android:id="@+id/FormoreInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/anna"
        android:layout_margin="20dp"
        android:background="#9fc5e8"
        android:text="Click For More"
        android:textColor="#20124d"
        android:textStyle="bold"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="EXIT"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#444444"
        android:background="#a64d79"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"/>
</RelativeLayout>